<div class="auth-container">
    <h2>Registrar</h2>
    <form action="/register" method="post">
        <div class="form-control">
            <label for="name">Nome:</label>
            <input type="text" name="name" placeholder="Digite o seu nome" autocomplete="off" required>
        </div>
        <div class="form-control">
            <label for="email">E-mail:</label>
            <input type="email" name="email" placeholder="Digite o seu email" autocomplete="off" required>
        </div>
        <div class="form-control">
            <label for="password">Senha:</label>
            <input type="password" name="password" placeholder="Informe uma senha" autocomplete="off" required>
        </div>
        <div class="form-control">
            <label for="conformpassword">Confirmar senha:</label>
            <input type="password" name="confirmpassword" placeholder="confime a sua senha" autocomplete="off" required>
        </div>
        <input type="submit" value="Cadastrar">
        <p>Já é registrado?<a href="/login"> Clique aqui</a></p>
    </form>
</div>
